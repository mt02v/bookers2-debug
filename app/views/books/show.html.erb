<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table-inverse'>
  		 <tbody>
  		  <tr>
          <td>
          <%= image_tag @book.user.get_profile_image, size:"100×100" %><br/>
          <%= link_to user_path(@book.user) do %>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book_path(@book.id) do %></td>
              <%= @book.title %></td>
            <% end %>
            </td>
          <td><%= @book.body %></td>
          <% if user_signed_in? && current_user.id == @book.user_id %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success %></td>
            <td><%= link_to 'Destroy', book_path(@book,id), method: :delete, "data-confirm" => "Are you sure？", class: "btn btn-sm btn-danger" %></td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>